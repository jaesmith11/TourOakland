<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar"/>

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/list_item_height"
            android:layout_marginRight="@dimen/list_item_height"
            style="@style/cardLayoutStyle"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/detail_location"

            android:paddingRight="@dimen/list_item_height"
            style="@style/headingStyle"
            android:text="@string/location_name" />

        <TextView
            android:id="@+id/detail_neighborhood"
            android:layout_marginRight="@dimen/list_item_height"
            style="@style/detailStyle"
            android:text="@string/neighborhood" />

        <TextView
            android:id="@+id/detail_date_est"
            android:layout_marginRight="@dimen/list_item_height"
            style="@style/detailStyle"
            android:text="@string/est" />

    </LinearLayout>
</ScrollView>